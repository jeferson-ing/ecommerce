<div class="card-header" style="background-color: #A7D5DC">
  <div class="col-md-12">
    <div class="text-center">
      <i class="fas fa-user-plus fa-2x"></i><h2>Registrarse</h2>
    </div>
  </div>
</div>

<div class="card-body">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="col-md-12">
      <div class="form-group row text-right">
        <%= f.label 'Nombre', 'Nombre', class: "col-md-2 control-label" %>
        <div class="col-md-9">
          <%= f.text_field :name, class: "form-control", placeholder: "Nombre" %>
        </div>
      </div>

      <div class="form-group row text-right">
        <%= f.label 'Correo', 'Correo', class: "col-md-2 control-label" %>
        <div class="col-md-9">
          <%= f.text_field :email, class: "form-control", placeholder: "Correo" %>
        </div>
      </div>
      <div class="form-group row text-right">
        <%= f.label 'Contraseña', 'Contraseña', class: "col-md-2 control-label" %>
        <div class="col-md-9">
          <%= f.password_field :password, class: "form-control", placeholder: "Contraseña" %>
        </div>
      </div>

      <div class="form-group row text-right">
        <%= f.label 'Confirmar Contraseña', 'Confirmar Contraseña', class: "col-md-2 control-label" %>
        <div class="col-md-9">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmar Contraseña" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Registrar", class: 'btn btn-success float-right'%>
      </div>
    </div>

  <% end %>
  <%= render "devise/shared/links" %>

</div>
